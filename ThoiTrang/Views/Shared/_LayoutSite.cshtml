<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link href="~/Public/css/_LayoutSite.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</head>
<body>
    <section class="header clearfix">
        <div class="container py-2">
            <div class="row">
                <div class="col-md-1 logo">
                    <img src="~/Public/images/logo.jpg alt="Logo" class="img-fluid" />
                </div>
                <div class="col-md-6">
                    <form class="d-flex py-4">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section class="mainmenu clearfixv bg-light ">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light ">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Cửa hàng 9w</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Điện thoại</a>       
                            </li>
                            <li><a class="nav-link" href="#">Âm thanh</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sản phẩm
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#"></a>Phụ kiện công nghệ</li>
                                    <li><a class="dropdown-item" href="#">Điện thoại</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Laptop</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Giới thiệu sản phẩm</a>
                            </li>
                        </ul>
                        
                    </div>
                </div>
            </nav>
        </div>
    </section>
    <section class="maincontent clearfix">
        @RenderBody()
    </section>
    <section class="footer clearfix bg-footer">
        <div class="container  py-4">
            <div class="row">
                <div class="col-md-3">
                    <h3 class="text-light">Chúng tôi là ai</h3>
                </div>
                <div class="col-md-3">
                    <h3 class="text-light">Chính sách</h3>
                </div>
                <div class="col-md-3">
                    <h3 class="text-light">Khu bán hàng</h3>
                </div>
                <div class="col-md-3">
                    <h3 class="text-light">Trợ giúp chung</h3>
                </div>
            </div>
          

        </div>
    </section>
    <section class="copyright clearfix bg-footer  py-2 ">
        <div class="container text-light  border-top border-light">
            <div class="row">
                <div class="col-md-6 py-1">
                    Bản quyền thuộc về Trần Trung Kiên
                </div>
                <div class="col">

                </div>
            </div>
        </div>
    </section>
</body>
</html>
